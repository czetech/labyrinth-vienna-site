---
import { Image } from "astro:assets";

const { path, style, class: className } = Astro.props;

const images = import.meta.glob(
  "/src/assets/images/**/*.{apng,avif,gif,jpeg,jpg,png,svg,webp}",
);

---

<Image
  src={images[`/src/assets${path}`]()}
  alt=""
  layout="constrained"
  class={className}
  style={style}
/>
